
<FentanilWindow>:
    name: "fentanil"
    FloatLayout:
        cols: 1
        FloatLayout:
            size: root.width, root.height/2
            Label:
                text: "Введите массу \nв граммах"
            TextInput:
                multiline: False
            Label:
                text: "Введите дозировку \nна 1мл/ч в мкг/кг*ч"
            TextInput:
                multiline: False
            Label:
                text: "Выберите, сколько \nсколько возьмёте ампул"
            TextInput:
                multiline: False
        Button:
            text: "Go Back"
            on_release:
                app.root.current = "first"
                root.manager.transition.direction = "right"


<AboutWindow>:
    name: "about"
    FloatLayout:
        Label:
            font_size: 14
            text: "Программа для расчёта лекарств. \nВерсия на kivy. \nМухин А.С. 22.11.2022"
        Button:
            pos_hint: {"x":0.02, "y": 0.02}
            text: "Обратно"
            on_release:
                app.root.current = "first"
                root.manager.transition.direction = "right"