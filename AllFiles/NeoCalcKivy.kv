<Button>:  #Макет кнопки
    size_hint: 0.96, 0.2
    font_size: 14

<FirstWindow>:
    name: "first"

    FloatLayout:

        Button: #Кнопка Фентанил
            pos_hint: {"x":0.02, "top": 0.98}
            text: "Фентанил"
            on_release:
                app.root.current = "fentanil"
                root.manager.transition.direction = "left"

        Button: #Кнопка О программе
            pos_hint: {"x":0.02, "top": 0.76}
            text: "О программе"
            on_release:
                app.root.current = "about"
                root.manager.transition.direction = "left"

<FentanilWindow>:
    masBabe: mBabe
    dosFent: dosF
    numAmp: nAmp
    name: "fentanil"
    GridLayout:
        cols: 1
        GridLayout:
            cols: 2
            Label:
                text: "Введите массу \nв граммах"
            TextInput:
                id: mBabe
                multiline: False
            Label:
                text: "Введите дозировку \nна 1мл/ч в мкг/кг*ч"
            TextInput:
                id: dosF
                multiline: False
            Label:
                text: "Выберите, сколько \nсколько возьмёте ампул"
            TextInput:
                id: nAmp
                multiline: False
        Button:
            text: "Рассчитать"
            on_press: root.change()
        Label:
            text: "Итог расчёта"
        Button:
            text: "Go Back"
            on_release:
                app.root.current = "first"
                root.manager.transition.direction = "right"


<AboutWindow>:
    name: "about"
    FloatLayout:
        Label:
            font_size: 14
            text: "Программа для расчёта лекарств. \nВерсия на kivy. \nМухин А.С. 22.11.2022"
        Button:
            pos_hint: {"x":0.02, "y": 0.02}
            text: "Обратно"
            on_release:
                app.root.current = "first"
                root.manager.transition.direction = "right"
